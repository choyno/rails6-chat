

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-signin form", id: "investor-form" }) do |f| %>
    <center>
      <h3 class="form-signin-heading" style="margin-top:20px;">RAILS 6 Chat <br/> SIGNUP</h3>
    </center>
    <br/>

    <% if resource.errors.any? %>
        <% resource.errors.full_messages.each do |msg| %>
          <p style="color:red;"><%= msg %></p>
        <% end %>
    <% end %>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="glyphicon glyphicon-user"></i>
        </div>
        <span class="help-block error pull-right"></span>
        <%= f.input_field :username, required: true, class:"form-control", placeholder:"Username", autofocus: true, id:"validate-username" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="glyphicon glyphicon-user"></i>
        </div>
        <span class="help-block error pull-right"></span>
        <%= f.input_field :email, required: true, class:"form-control",placeholder:"Email Address", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class=" glyphicon glyphicon-lock "></i>
        </div>
        <span class="help-block error pull-right"></span>
        <%= f.input_field :password, class:"form-control", placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), id: "validate-password txtNewPassword" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class=" glyphicon glyphicon-lock "></i>
        </div>
        <span class="help-block error pull-right"></span>
        <%= f.input_field :password_confirmation, class:"form-control", placeholder: "Password Confirmation", required: true, id:"validate-password-confirmation txtConfirmPassword", onkeyup: "checkPasswordMatch();" %>
      </div>
    </div>

    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    <br/>
    <%= render "devise/shared/links" %>
  <% end %>

